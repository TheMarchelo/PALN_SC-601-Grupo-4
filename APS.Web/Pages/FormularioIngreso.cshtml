@model APS.Web.Pages.FormularioIngresoModel

@{
    ViewData["Title"] = "Ingreso de Equipo";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="mb-4">Formulario de Ingreso de Equipo</h1>

    <div class="card">
        <div class="card-body">
            <!-- Añade un ID al formulario -->
            <form id="formIngresoEquipo" method="post">
                @Html.AntiForgeryToken()

                <!-- Resumen de Validación -->
                <!-- <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div> -->
                <!-- Marca -->
                <div class="form-group">
                    <label asp-for="Equipo.Marca" class="form-label"></label>
                    <input asp-for="Equipo.Marca" class="form-control" placeholder="Ingrese la marca del equipo" />
                    <span asp-validation-for="Equipo.Marca" class="text-danger"></span>
                </div>

                <!-- Modelo -->
                <div class="form-group">
                    <label asp-for="Equipo.Modelo" class="form-label"></label>
                    <input asp-for="Equipo.Modelo" class="form-control" placeholder="Ingrese el modelo del equipo" />
                    <span asp-validation-for="Equipo.Modelo" class="text-danger"></span>
                </div>

                <!-- Nombre del Cliente -->
                <div class="form-group">
                    <label asp-for="Equipo.NombreCliente" class="form-label"></label>
                    <input asp-for="Equipo.NombreCliente" class="form-control" placeholder="Ingrese el nombre del cliente" />
                    <!-- <span asp-validation-for="Equipo.NombreCliente" class="text-danger"></span> -->
                </div>

                <!-- Motivo de Ingreso -->
                <div class="form-group">
                    <label asp-for="Equipo.MotivoIngreso" class="form-label"></label>
                    <textarea asp-for="Equipo.MotivoIngreso" class="form-control" placeholder="Describa el motivo del ingreso" rows="3"></textarea>
                    <!-- <span asp-validation-for="Equipo.MotivoIngreso" class="text-danger"></span> -->
                </div>

                <!-- Garantía con Local -->
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Equipo.GarantiaConLocal" id="GarantiaConLocal" type="checkbox" />
                    <label class="form-check-label" for="GarantiaConLocal">Garantía con Local</label>
                </div>

                <!-- Contraseña del Equipo -->
                <div class="form-group">
                    <label asp-for="Equipo.ContraseñaEquipo" class="form-label"></label>
                    <input asp-for="Equipo.ContraseñaEquipo" class="form-control" placeholder="Ingrese la contraseña del equipo (si aplica)" />
                    <!-- <span asp-validation-for="Equipo.ContraseñaEquipo" class="text-danger"></span> -->
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label asp-for="Equipo.Descripcion" class="form-label"></label>
                    <textarea asp-for="Equipo.Descripcion" class="form-control" placeholder="Describa el equipo y su estado" rows="3"></textarea>
                    <!-- <span asp-validation-for="Equipo.Descripcion" class="text-danger"></span> -->
                </div>

                <!-- Usuario ID -->
                <div class="form-group">
                    <label asp-for="Equipo.UsuarioId" class="form-label"></label>
                    <input asp-for="Equipo.UsuarioId" class="form-control" placeholder="Ingrese el ID del usuario" />
                    <!-- <span asp-validation-for="Equipo.UsuarioId" class="text-danger"></span> -->
                </div>

                <!-- Botón de Enviar -->
                <button type="submit" class="btn btn-primary mt-3">Guardar</button>
            </form>
        </div>
    </div>
</div>

<!-- Aquí va la sección de Scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Captura el evento de envío del formulario
            $('#formIngresoEquipo').on('submit', function (e) {
                e.preventDefault(); // Previene el comportamiento de envío predeterminado

                // Enviar los datos del formulario usando AJAX
                $.ajax({
                    type: 'POST',
                    url: '@Url.Page("/FormularioIngreso")', // URL a la que se envían los datos
                    data: $(this).serialize(), // Serializa los datos del formulario
                    success: function (response) 
                    { console.log('Respuesta del servidor:', response);
                    if (response.success) { 
                        alert('%C2%A1Equipo insertado exitosamente!'); 
                    } else { 
                        alert('Ocurri%C3%B3 un error: ' + response.message); 
                    } 
                    },
                    error: function (error) {
                        console.log(error);
                        alert('Ocurrió un error al insertar el equipo.');
                    }
                });
            });
        });
    </script>
}
